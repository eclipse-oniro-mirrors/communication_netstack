  defines = [
    "NETMGR_LOG_TAG = \"NapiSocket\"",
    "LOG_DOMAIN = 0xD0015B0",
    "FUZZ_TEST",
    "OPENSSL_SUPPRESS_DEPRECATED",
  ]

